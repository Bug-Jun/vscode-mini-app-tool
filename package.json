{
	"name": "Mini-Program-Tool",
	"displayName": "小程序工具",
	"description": "适用于VS Code的微信小程序开发工具",
	"version": "1.0.2002",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "minitool.create.page",
				"title": "%command.minitool.create.page%",
				"category": "%category.minitool%"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder == true",
					"command": "minitool.create.page"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
